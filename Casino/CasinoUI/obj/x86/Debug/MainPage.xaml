<Page
    x:Class="CasinoUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CasinoUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ComboBox x:ConnectionId='2' x:Name="cboNames" Height="33" Margin="73,51,0,0" Width="385"                                  />
        <TextBox x:ConnectionId='3' x:Name="txtBalance" HorizontalAlignment="Left" Height="33" Margin="490,51,0,0" Text="0.00" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" IsReadOnly="True"/>
        <TextBox x:ConnectionId='4' x:Name="txtAmount" HorizontalAlignment="Left" Height="33" Margin="603,51,0,0" Text="0.00" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" IsReadOnly="True"/>
        <TextBox x:ConnectionId='5' x:Name="txtPlay" HorizontalAlignment="Left" Height="35" Margin="243,114,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" IsEnabled="False" RenderTransformOrigin="0.604,0.571"/>
        <Button x:ConnectionId='6' x:Name="btnPlay" Content="Play" Height="35" Margin="376,114,0,0" VerticalAlignment="Top" Width="82"                    IsEnabled="False"/>
        <ComboBox x:ConnectionId='7' x:Name="cboOne" Height="35" Margin="73,114,0,0" Width="84" IsEnabled="False"/>
        <ComboBox x:ConnectionId='8' x:Name="cboTwo" Height="35" Margin="73,154,0,0" Width="84" IsEnabled="False"/>
        <ComboBox x:ConnectionId='9' x:Name="cboThree" Height="35" Margin="73,194,0,0" Width="84" IsEnabled="False"/>
        <TextBox x:ConnectionId='10' x:Name="txtPoint" HorizontalAlignment="Left" Height="33" Margin="722,51,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="490,26,0,0" Text="Balance:" TextWrapping="Wrap" VerticalAlignment="Top" Width="59"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="603,26,0,0" Text="Played:" TextWrapping="Wrap" VerticalAlignment="Top" Width="55"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="722,26,0,0" Text="Points:" TextWrapping="Wrap" VerticalAlignment="Top" Width="59"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="73,30,0,0" Text="Select Member:" TextWrapping="Wrap" VerticalAlignment="Top" Width="106"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="73,89,0,0" Text="Select Numbers:" TextWrapping="Wrap" VerticalAlignment="Top" Width="104"/>
        <Button x:ConnectionId='11' x:Name="btnRedeem" Content="Redeem" Height="35" Margin="376,154,0,0" VerticalAlignment="Top" Width="82"                      IsEnabled="False"/>
        <Button x:ConnectionId='12' x:Name="btnGift" Content="Gift" Height="35" Margin="376,194,0,0" VerticalAlignment="Top" Width="82"                    IsEnabled="False"/>
        <TextBlock x:ConnectionId='13' x:Name="tbParking" HorizontalAlignment="Left" Height="20" Margin="490,93,0,0" Text="No Parking" TextWrapping="Wrap" VerticalAlignment="Top" Width="85"/>
        <TextBlock x:ConnectionId='14' x:Name="tbMember" HorizontalAlignment="Left" Height="20" Margin="490,119,0,0" Text="Member Details:" TextWrapping="Wrap" VerticalAlignment="Top" Width="565"/>
        <Button x:ConnectionId='15' x:Name="btnDeposit" Content="Deposit" Height="35" Margin="376,234,0,0" VerticalAlignment="Top" Width="82"                       IsEnabled="False"/>
        <Border BorderThickness="1" BorderBrush="Red" HorizontalAlignment="Left" Height="187" Margin="490,154,0,0" VerticalAlignment="Top" Width="412">
            <TextBox x:ConnectionId='20' x:Name="txtTotals" HorizontalAlignment="Stretch" Text="Totals:" TextWrapping="Wrap" VerticalAlignment="Stretch" IsReadOnly="True" />
        </Border>
        <TextBlock x:ConnectionId='16' x:Name="tbPointFactor" HorizontalAlignment="Left" Height="20" Margin="832,57,0,0" Text="0%" TextWrapping="Wrap" VerticalAlignment="Top" Width="38"/>
        <TextBlock x:ConnectionId='17' x:Name="tbWinOne" HorizontalAlignment="Left" Height="20" Margin="177,123,0,0" Text="-1" TextWrapping="Wrap" VerticalAlignment="Top" Width="38"/>
        <TextBlock x:ConnectionId='18' x:Name="tbWinTwo" HorizontalAlignment="Left" Height="20" Margin="177,161,0,0" Text="-1" TextWrapping="Wrap" VerticalAlignment="Top" Width="38"/>
        <TextBlock x:ConnectionId='19' x:Name="tbWinThree" HorizontalAlignment="Left" Height="20" Margin="177,201,0,0" Text="-1" TextWrapping="Wrap" VerticalAlignment="Top" Width="38"/>

    </Grid>
</Page>

